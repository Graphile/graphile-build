#!/bin/bash

set -e
echo "[1/4]: Building Code"
npm run prepublish:all

echo "[2/4]: Linting Code"
npm run lint

echo "[3/4]: Checking types"
npm run flow:check

echo "[4/4]: Testing Project"
for I in packages/*/; do
  cd $I
  yarn test
  cd -
done

echo ""
echo "CI completed succesfully ðŸŽ‰"
echo ""
